# install.packages("forecast")
require("zoo")
require("forecast")

args = commandArgs(trailingOnly=TRUE)
contents = readLines("./filenames", n=args[1])
dat <- read.csv(paste("./data_use/",contents,sep=""))

# build model
dat <- read.zoo(dat)
m <- auto.arima(dat)

pdf(paste(contents,".pdf",sep=""))
plot(forecast(m,h=100))
dev.off()

print(summary(m))